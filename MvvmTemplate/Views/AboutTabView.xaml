<UserControl
    x:Class="MvvmTemplate.Views.AboutTabView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:MvvmTemplate.ViewModels"
    xmlns:v="clr-namespace:MvvmTemplate.Views">
    <StackPanel Name="TabContent">

        <StackPanel.DataContext>
            <vm:AboutTabViewModel/>
        </StackPanel.DataContext>

        <TextBox Margin="10" Text="{Binding DataText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button Content="Close" Margin="10" />

    </StackPanel>
</UserControl>